<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <com.example.tiktok.VideoEditorFolder.widget.PortraitFrameLayout
    android:id="@+id/wrap_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" >

  </com.example.tiktok.VideoEditorFolder.widget.PortraitFrameLayout>


  <ListView
      android:id="@+id/filter_list"
      android:layout_width="120dp"
      android:layout_height="0dp"
      android:layout_marginTop="74dp"

      android:layout_marginBottom="120dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

  </ListView>

  <ImageView
      android:id="@+id/imageView13"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginBottom="16dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@+id/wrap_view"
      app:layout_constraintEnd_toEndOf="@+id/wrap_view"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/cameralens" />

  <ImageView
      android:id="@+id/imageView15"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginTop="48dp"
      android:layout_marginRight="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/wrap_view"
      app:srcCompat="@drawable/rotate_camera" />

  <ImageView
      android:id="@+id/imageView16"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginTop="24dp"
      app:layout_constraintEnd_toEndOf="@+id/imageView15"
      app:layout_constraintStart_toStartOf="@+id/imageView15"
      app:layout_constraintTop_toBottomOf="@+id/imageView15"
      app:srcCompat="@drawable/flash" />

  <Button
      android:id="@+id/button"
      android:layout_width="140dp"
      android:layout_height="30dp"
      android:text="Sound"
      android:background="@color/exo_edit_mode_background_color"
      android:drawableLeft="@drawable/ic_baseline_music_note_24"
      android:textSize="12sp"
      android:layout_marginTop="32dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView14"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/wrap_view"
      app:layout_constraintEnd_toEndOf="@+id/wrap_view"
      app:layout_constraintStart_toStartOf="@+id/wrap_view"
      app:srcCompat="@drawable/camera" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="32dp"
      android:layout_marginBottom="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/ic_baseline_toys_24" />

  <ImageView
      android:id="@+id/imageView18"
      android:layout_width="32dp"
      android:layout_height="32dp"

      android:layout_marginLeft="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_close_24" />

  <TextView
      android:id="@+id/textView7"
      android:layout_marginTop="24dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="15 s"
      android:textColor="@color/red"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/imageView16"
      app:layout_constraintStart_toStartOf="@+id/imageView16"
      app:layout_constraintTop_toBottomOf="@+id/imageView16" />

  <TextView
      android:id="@+id/textView8"
      android:layout_marginTop="24dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="30 s"
      android:textColor="@color/red"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/textView7"
      app:layout_constraintStart_toStartOf="@+id/textView7"
      app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>